html body{
    overflow-x: hidden;
    height: 100%;
}

nav{
    width: 350px;
    height: 100%;
    float: left;
    background-color: #eaeef3;
    background-image: -webkit-linear-gradient(right,rgba(234,238,243,0.2),#eaeef3),-webkit-linear-gradient(left,#eaeef3,#eaeef3 97%,#d3d7db);
    position: fixed;
}

nav li{
    display: list-item;
}

nav li a{
    color: #426DC9;
    display: block;
    cursor: pointer;
    font-size: 20px;
    padding: 13px 0;
    text-align: right;
    text-shadow: white 0 1px 1px;
    -webkit-padding-end: 24px;
    text-decoration: none;
}

.highlight{
    background: #fff;
}

.hover{
    background: #8FAAD9;
}

.enabled{
    background: #fff;
}

.disabled{
    background: #eee;
}

header{
    margin: 15px 0 74px 20px;
}

header img{
    vertical-align: top;
}

header h1{
    display: inline;
    text-shadow: white 0 1px 2px;
    color: #53637D;
    font-size: 23px;
    line-height: 48px;
}

footer{
    padding: 0 0 10px 10px;
    font-size: 110%;
    color: #53637D;
    position: absolute;
    bottom: 0;
}

footer a{
    color: #53637D;
}

#main{
    width: 100%;
    margin-left: 350px;
    padding: 20px;
}

#batch{
    margin-top: 25px;
    font-size: 16px;
    border-bottom: 1px solid #CDCDCD;
    border-top: 1px solid #CDCDCD;
    padding-bottom: 10px;
    padding-top: 10px;
}

#ext-list{
    margin-top: 10px;
}

#ext-list li{
   border-bottom: 1px solid #CDCDCD;
   clear:both;
}

.ext-left{
    float: left;
}

.ext-icon{
    margin-top: 5px;
    width: 48px;
    height: 48px;
}

.ext-right{
    font-size: 15px;
    padding: 10px;
    margin-left: 50px;
}

.ext-intro{
    font-size: 13px;
}

.ext-right > *{
    margin-top: 8px;
}

.ext-right img{
    margin: 0 3px 0 0;
    padding: 0;
    cursor: pointer;
}

.ext-right input{
   margin-top: 14px; 
}

.checkbox{
    margin-right: 20px;
}

#keyword{
    width: 500px;
    height: 35px;
    font-size: 25px;
    text-shadow: 0px 1px 0px #fff;  
    outline: none;  
    -webkit-border-radius: 5px;  
    border: 1px solid #ccc;  
    -webkit-transition: .3s ease-in-out;  
    padding-left: 10px;
    background: url("../images/magnifier.jpg") no-repeat 470px 5px;
}

#keyword:hover {  
    border: 1px solid #fafafa;  
    -webkit-box-shadow: 0px 0px 3px #007eff;  
}  

#keyword:focus {  
    border: 1px solid #fafafa;  
    -webkit-box-shadow: 0px 0px 6px #007eff;  
}  

hr{
    color: #CDCDCD;
    margin-left: 170px;
}

::-webkit-scrollbar {
    width: 8px;
    height: 8px;
    background-color: #aaa;
    -webkit-border-radius: 1ex;
}

::-webkit-scrollbar-thumb {
    background: #ccc -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgb(240, 240, 240)), to(rgb(210, 210, 210)));
    -webkit-border-radius: 1ex;
    -webkit-box-shadow: 0 1px 3px rgba(0, 0, 0, .4);
}

::-webkit-scrollbar-thumb:hover {
    background: #ccc -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgb(245, 245, 245)), to(rgb(215, 215, 215)));
}
